<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
   >



     <androidx.cardview.widget.CardView
         android:layout_width="220dp"
         android:layout_height="220dp"
         app:cardCornerRadius="17dp"
         app:cardUseCompatPadding="true"
         android:elevation="10dp"
         >

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:src="@drawable/pizza_sample"
             android:scaleType="centerCrop"
             android:id="@+id/popularImg"
             android:foreground="?attr/selectableItemBackground"
             android:clickable="true"
             />

         <ImageView
             android:layout_width="match_parent"
             android:layout_height="106dp"
             android:src="@drawable/image_btm_overlay"
             android:scaleType="centerCrop"
             android:id="@+id/imageGradiant"
             android:layout_gravity="bottom"
             />


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="HomeMade Pizza Recipe with cheese"
             android:textSize="15sp"
             android:textColor="@color/white"
             android:fontFamily="@font/popains"
             android:padding="7dp"
             android:maxLines="2"
             android:ellipsize="end"
             android:id="@+id/popularItem"
             android:layout_gravity="bottom"
             android:layout_marginBottom="30dp"

             />


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_gravity="bottom"
             android:padding="7dp"
             >

             <ImageView
                 android:layout_width="15dp"
                 android:layout_height="15dp"
                 android:src="@drawable/clock_icon"
                 app:tint="@color/white"
                 />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="20 mins"
                 android:textColor="@color/white"
                 android:textSize="11sp"
                 android:maxLength="15"
                 android:id="@+id/popularTime"
                 android:fontFamily="@font/popains"
                 />




         </LinearLayout>




     </androidx.cardview.widget.CardView>





</LinearLayout>